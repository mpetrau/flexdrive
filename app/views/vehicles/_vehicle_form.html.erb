<%= simple_form_for @vehicle do |f| %>
  <%= f.input :make %>
  <%= f.input :model %>
  <%= f.input :colour %>
  <%= f.input :manufactureYear %>
  <%= f.input :KM %>
  <%= f.input :fuelType, collection: Vehicle::FUEL_TYPE, prompt: "Choose fuel type" %>
  <%= f.input :enginePower %>
  <%= f.input :licensePlate %>
  <%= f.input :status, collection: Vehicle::VEHICLE_STATUS %>
  <%= f.association :offer, prompt: "Choose offer package" %>

  <%= f.submit "Save" %>
<% end %>


